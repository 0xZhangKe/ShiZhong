<resources>

    <!--白天主题-->
    <style name="DayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dayColorPrimary</item>
        <item name="colorPrimaryDark">@color/dayColorPrimaryDark</item>
        <item name="colorAccent">@color/dayColorAccent</item>
        <item name="toolbarColor">@color/dayColorPrimary</item>
        <item name="backgroundColor">@color/dayStyleBackground</item>
        <item name="textColor">@color/text_black</item>
        <item name="gradientStartColor">@color/dayStartColor</item>
        <item name="gradientEndColor">@color/dayEndColor</item>
        <item name="simpleIconFillColor">@color/daySimpleIconFillColor</item>
    </style>

    <!--夜间主题-->
    <style name="NightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/nightColorPrimary</item>
        <item name="colorPrimaryDark">@color/nightColorPrimaryDark</item>
        <item name="colorAccent">@color/nightColorAccent</item>
        <item name="toolbarColor">@color/nightColorPrimaryDark</item>
        <item name="backgroundColor">@color/nightStyleBackground</item>
        <item name="textColor">@color/text_white</item>
        <item name="gradientStartColor">@color/nightStartColor</item>
        <item name="gradientEndColor">@color/nightEndColor</item>
        <item name="simpleIconFillColor">@color/nightSimpleIconFillColor</item>
    </style>

    <!-- ToolBar 默认 them -->
    <style name="toolbar_them" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">?attr/textColor</item>
        <item name="android:textColorPrimary">?attr/textColor</item>
        <item name="actionMenuTextColor">?attr/textColor</item>
    </style>

    <!--圆形对话框样式-->
    <style name="Progress_circle">
        <item name="android:indeterminateDrawable">@drawable/custom_progress_color</item>
    </style>

    <!-- 默认分割线样式 -->
    <style name="default_diver">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray_diver</item>
    </style>

    <!--圆形图片样式-->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
    </declare-styleable>

    <!--透明背景的 dialog-->
    <style name="TranslucentDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--云音乐海报详情对话框动画-->
    <style name="MusicPosterDialogAnim">
        <item name="android:windowEnterAnimation">@anim/dialog_show_scale</item>
    </style>
</resources>
