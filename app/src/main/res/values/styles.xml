<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- ToolBar 默认 them -->
    <style name="toolbar_them" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>
    </style>

    <!--圆形对话框样式-->
    <style name="Progress_circle">
        <item name="android:indeterminateDrawable">@drawable/custom_progress_color</item>
    </style>

    <!-- 默认分割线样式 -->
    <style name="default_diver">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray_diver</item>
    </style>

    <!--圆形图片样式-->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
    </declare-styleable>

    <!--透明背景的 dialog-->
    <style name="TranslucentDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="MusicPosterDialogAnim">
        <item name="android:windowEnterAnimation">@anim/dialog_show_scale</item>
    </style>
</resources>
